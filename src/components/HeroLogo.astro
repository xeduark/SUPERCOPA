---
interface Props {
	id: string
	class?: string
	noEffect?: boolean
	animated?: boolean
	urlImage?: string
}

const {
	id,
	class: classList,
	noEffect,
	animated = true,
	urlImage = "https://firebasestorage.googleapis.com/v0/b/images-e79d0.appspot.com/o/SUPERCOPA2.png?alt=media&token=fe4682a4-cf2d-4173-8043-715df1f96982",
} = Astro.props as Props
---

<svg
	class:list={classList}
	width="900"
	height="680"
	fill="none"
	viewBox="0 0 800 679"
	role="img"
	aria-label="Logotipo de SUPERCOPA"
>
	<symbol id={id}>
		<image href={urlImage} width="800" height="679" />
	</symbol>

	<use
		href={`#${id}`}
		class:list={[noEffect ? "text-white" : "text-primary", animated ? "animate-fade-in-up" : ""]}
	></use>
</svg>
